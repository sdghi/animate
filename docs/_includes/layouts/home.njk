{% extends "layouts/base.njk" %}

{% block content %}
  <article data-template="home" class="home">
    <section class="home__hero">
      <div class="home__hero__inner">
        <h2 class="home__hero__inner__title">{{home.hero.title}}</h2>
        <h3 class="home__hero__inner__subhead">{{home.hero.subtitle}}</h3>
        <div class="home__hero__inner__buttons">
          {% for button in home.hero.buttons %}
            <a href="{{button.url}}" class="home__hero__inner__buttons__button button">{{button.label}}</a>
          {% endfor %}
        </div>
      </div>
      <canvas class="home__hero__canvas"></canvas>
    </section>

    {% include 'partials/spacer.njk' %}

    <section class="home__scroll" id="features">
      <svg class="home__scroll__illustration" data-scroll width="726" height="584" viewBox="0 0 726 584" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle class="home__scroll__illustration__circle" style="--delay: 0.1s" cx="273" cy="325" r="84" fill="#C6944C"/>
        <circle class="home__scroll__illustration__circle" style="--delay: 0.3s" cx="128" cy="170" r="67" fill="#84C9B8"/>
        <circle class="home__scroll__illustration__circle" style="--delay: 0.5s" cx="607.5" cy="364.5" r="65.5" fill="#EED36C"/>
        <circle class="home__scroll__illustration__circle" style="--delay: 0.2s" cx="117" cy="479" r="49" fill="#EABC4E"/>
        <circle class="home__scroll__illustration__circle" style="--delay: 0.7s" cx="472" cy="143" r="109" fill="#EA3056"/>
        <circle class="home__scroll__illustration__circle" style="--delay: 0.2s" cx="436" cy="442" r="43" fill="#0C363C"/>
      </svg>
      <div class="home__scroll__content">
        <p class="home__scroll__content__body" data-scroll>{{home.scroll.body}}</p>
      </div>
    </section>

    {% include 'partials/spacer.njk' %}
    {% include 'partials/spacer.njk' %}

    <section class="home__dropdown">
      <div class="home__dropdown__items">
        {% for dropdown in home.dropdown.items %}
          <details class="home__dropdown__items__item" {% if loop.index0 == 0%}open{% endif %}>
            <summary class="home__dropdown__items__item__toggle">{{dropdown.title}}</summary>
            <p class="home__dropdown__items__item__body">{{dropdown.body}}</p>
          </details>
        {% endfor %}
      </div>
    </section>

    {% include 'partials/spacer.njk' %}
    {% include 'partials/spacer.njk' %}

    <section class="home__gallery">
      <div class="home__gallery__items">
        {% for item in home.gallery.items %}      
          <div class="home__gallery__items__item">
            <figure class="home__gallery__items__item__figure" data-current="{{loop.index0 == 0}}">
              <img class="home__gallery__items__item__figure__image" src="{{item.image.url}}" alt="{{item.image.alt}}"> 
              <figcaption class="home__gallery__items__item__figure__caption">{{item.caption}}</figcaption>
            </figure>
          </div>
        {% endfor %}
      </div>

      <div class="home__gallery__nav">
        {% for item in home.gallery.items %}      
          <button class="home__gallery__nav__button" data-value="{{loop.index0}}" data-current="{{loop.index0 == 0}}" tabindex="0"><span class="visually-hidden">View slide {{loop.index0}}</span></button>
        {% endfor %}
      </div>
    </section>

    {% include 'partials/spacer.njk' %}
    {% include 'partials/spacer.njk' %}
  </article>
{% endblock %}
